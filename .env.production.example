# Server Configuration
PORT=3000
NODE_ENV=production

# Session Configuration (GANTI dengan secret yang kuat!)
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
SESSION_MAX_AGE=86400000

# Database Configuration (untuk Docker Production)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MONGO_URI=mongodb://admin:CHANGE_THIS_STRONG_PASSWORD@tb_mongo:27017/tbvector?authSource=admin

# MongoDB Port (jangan expose ke public!)
MONGO_HOST_PORT=27017

# Device API Key (untuk IoT devices)
DEVICE_API_KEY=CHANGE_THIS_TO_SECURE_API_KEY

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=public/uploads

# JWT (untuk API, jika dibutuhkan)
JWT_SECRET=CHANGE_THIS_TO_STRONG_JWT_SECRET
JWT_EXPIRES_IN=7d
