# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
SESSION_MAX_AGE=86400000

# Database Configuration (for Docker)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_URI=mongodb://admin:admin123@tb_mongo:27017/tbvector?authSource=admin

# Database Configuration (for Local Development)
# MONGO_URI=mongodb://localhost:27017/tbvector

# MongoDB Ports
MONGO_HOST_PORT=27017
MONGO_EXPRESS_PORT=8081

# Device API Key (untuk IoT devices)
DEVICE_API_KEY=your_device_api_key_change_this

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=public/uploads

# JWT (untuk API, jika dibutuhkan)
JWT_SECRET=your_jwt_secret_key_change_this
JWT_EXPIRES_IN=1d
