<div
  class="h-full bg-gradient-to-br from-white to-primary-50 flex items-center justify-center p-4 md:p-8 rounded-lg md:rounded-2xl"
>
  <div class="max-w-4xl w-full">
    <!-- Toast Notification Container -->
    <div
      id="toast-container"
      class="fixed top-4 right-4 z-50 space-y-2"
      style="max-width: 400px"
    ></div>

    <!-- Welcome Section -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        Selamat Datang, <%= user.name %>!
      </h1>
      <p class="text-gray-600 text-lg">
        Mulai deteksi TB dengan merekam suara batuk Anda
      </p>
    </div>

    <!-- Recording Section -->
    <div
      class="bg-white rounded-2xl shadow-xl p-8 mb-6"
      x-data="audioRecorder()"
    >
      <!-- Mic Button -->
      <div class="flex flex-col items-center justify-center mb-6">
        <button
          @click="toggleRecording()"
          :class="isRecording ? 'bg-red-500 hover:bg-red-600 animate-pulse' : 'bg-primary-700 hover:bg-primary-800'"
          class="w-32 h-32 rounded-full flex items-center justify-center text-white shadow-2xl transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-primary-300 cursor-pointer"
        >
          <svg
            class="w-16 h-16"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"
            ></path>
          </svg>
        </button>
        <p
          class="mt-4 text-gray-600 font-medium"
          x-text="isRecording ? 'Merekam...' : 'Tekan untuk merekam'"
        ></p>
        <p
          class="text-sm text-gray-500 mt-1"
          x-show="isRecording"
          x-text="'Durasi: ' + recordingTime + 's'"
        ></p>
      </div>

      <!-- Audio Preview -->
      <div x-show="audioURL" class="mt-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">
          Preview Rekaman
        </h3>
        <audio :src="audioURL" controls class="w-full mb-4"></audio>

        <!-- Duration Warning -->
        <div
          x-show="!isValidDuration()"
          class="mb-4 bg-yellow-50 border-l-4 border-yellow-400 p-4"
        >
          <div class="flex">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-yellow-400"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <div class="ml-3">
              <p
                class="text-sm text-yellow-700 font-medium"
                x-show="recordingTime < 1"
              >
                ⚠️ Durasi rekaman terlalu pendek! Minimal 1 detik.
              </p>
              <p
                class="text-sm text-yellow-700 font-medium"
                x-show="recordingTime > 15"
              >
                ⚠️ Durasi rekaman terlalu panjang! Maksimal 15 detik.
              </p>
            </div>
          </div>
        </div>

        <div class="flex gap-3 justify-center">
          <button
            @click="uploadRecording()"
            :disabled="uploading || !isValidDuration()"
            :class="!isValidDuration() ? 'opacity-50 cursor-not-allowed' : ''"
            class="btn-primary transition-colors flex items-center gap-2"
          >
            <svg
              x-show="!uploading"
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
              ></path>
            </svg>
            <svg
              x-show="uploading"
              class="animate-spin w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"
              ></circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              ></path>
            </svg>
            <span
              x-text="uploading ? 'Mengupload...' : 'Upload Rekaman'"
            ></span>
          </button>
          <button @click="resetRecording()" class="btn-secondary">
            Rekam Ulang
          </button>
        </div>
      </div>

      <!-- Instructions -->
      <div class="mt-8 bg-blue-50 rounded-lg p-4">
        <h4 class="font-semibold text-blue-900 mb-2 flex items-center gap-2">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          Petunjuk Perekaman
        </h4>
        <ul class="text-sm text-blue-800 space-y-1 ml-7">
          <li>• Pastikan Anda berada di tempat yang tenang</li>
          <li>• Dekatkan mikrofon ke mulut Anda</li>
          <li>• Batukkan sebanyak 3-5 kali</li>
          <li>• Durasi rekaman: minimal 1 detik, maksimal 15 detik</li>
          <li>• Tekan tombol merah untuk berhenti merekam</li>
        </ul>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="max-w-md mx-auto">
      <a
        href="/recordings"
        class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow flex items-center gap-4"
      >
        <div class="bg-primary-100 p-3 rounded-lg">
          <svg
            class="w-8 h-8 text-primary-700"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            ></path>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 text-lg">Riwayat Deteksi</h3>
          <p class="text-gray-600 text-sm">Lihat semua hasil deteksi Anda</p>
        </div>
      </a>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
  defer
></script>
<script>
  // Toast Notification System
  function showToast(message, type = 'info') {
    const container = document.getElementById('toast-container')
    const toast = document.createElement('div')

    const colors = {
      success: 'bg-green-50 border-green-500 text-green-800',
      error: 'bg-red-50 border-red-500 text-red-800',
      warning: 'bg-yellow-50 border-yellow-500 text-yellow-800',
      info: 'bg-blue-50 border-blue-500 text-blue-800',
    }

    const icons = {
      success: `<svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>`,
      error: `<svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>`,
      warning: `<svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>`,
      info: `<svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>`,
    }

    toast.className = `flex items-center gap-3 p-4 rounded-lg border-l-4 shadow-lg transform transition-all duration-300 ease-in-out ${colors[type]}`
    toast.style.animation = 'slideInRight 0.3s ease-out'
    toast.innerHTML = `
      <div class="flex-shrink-0">
        ${icons[type]}
      </div>
      <p class="flex-1 text-sm font-medium">${message}</p>
      <button onclick="this.parentElement.remove()" class="flex-shrink-0 text-gray-400 hover:text-gray-600">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    `

    container.appendChild(toast)

    // Auto remove after 5 seconds
    setTimeout(() => {
      toast.style.animation = 'slideOutRight 0.3s ease-out'
      setTimeout(() => toast.remove(), 300)
    }, 5000)
  }

  function audioRecorder() {
    return {
      isRecording: false,
      mediaRecorder: null,
      audioChunks: [],
      audioBlob: null,
      audioURL: null,
      recordingTime: 0,
      recordingInterval: null,
      uploading: false,

      async toggleRecording() {
        if (this.isRecording) {
          this.stopRecording()
        } else {
          await this.startRecording()
        }
      },

      isValidDuration() {
        return this.recordingTime >= 1 && this.recordingTime <= 15
      },

      async startRecording() {
        try {
          // Reset previous recording data
          this.audioBlob = null
          this.audioURL = null
          this.recordingTime = 0
          this.audioChunks = []

          const stream = await navigator.mediaDevices.getUserMedia({
            audio: true,
          })
          this.mediaRecorder = new MediaRecorder(stream)
          this.audioChunks = []
          this.recordingTime = 0

          this.mediaRecorder.addEventListener('dataavailable', (event) => {
            this.audioChunks.push(event.data)
          })

          this.mediaRecorder.addEventListener('stop', () => {
            this.audioBlob = new Blob(this.audioChunks, { type: 'audio/wav' })
            this.audioURL = URL.createObjectURL(this.audioBlob)
            stream.getTracks().forEach((track) => track.stop())
          })

          this.mediaRecorder.start()
          this.isRecording = true

          // Start timer
          this.recordingInterval = setInterval(() => {
            this.recordingTime++

            // Auto-stop after 15 seconds (at 16th second)
            if (this.recordingTime >= 15) {
              this.stopRecording()
              showToast(
                'Durasi maksimal 15 detik tercapai. Perekaman otomatis dihentikan.',
                'warning',
              )
            }
          }, 1000)
        } catch (error) {
          console.error('Error accessing microphone:', error)
          showToast(
            'Tidak dapat mengakses mikrofon. Pastikan Anda memberikan izin.',
            'error',
          )
        }
      },

      stopRecording() {
        if (this.mediaRecorder && this.isRecording) {
          this.mediaRecorder.stop()
          this.isRecording = false
          clearInterval(this.recordingInterval)
          // Don't reset recordingTime here - keep it for validation
        }
      },

      resetRecording() {
        this.audioBlob = null
        this.audioURL = null
        this.recordingTime = 0
        this.audioChunks = []
      },

      async uploadRecording() {
        if (!this.audioBlob) return

        // Validate duration before upload
        if (!this.isValidDuration()) {
          showToast(
            'Durasi rekaman tidak valid! Harus antara 1-15 detik.',
            'error',
          )
          return
        }

        this.uploading = true
        const formData = new FormData()
        formData.append('audio', this.audioBlob, 'recording.wav')
        formData.append('nama', '<%= user.name %>')

        try {
          const response = await fetch('/coughs/upload', {
            method: 'POST',
            body: formData,
          })

          if (response.ok) {
            showToast(
              'Rekaman berhasil diupload! Sedang dianalisis...',
              'success',
            )
            this.resetRecording()
            setTimeout(() => {
              window.location.href = '/recordings'
            }, 1500)
          } else {
            const error = await response.json()
            showToast(
              'Gagal mengupload rekaman: ' + (error.message || 'Unknown error'),
              'error',
            )
          }
        } catch (error) {
          console.error('Upload error:', error)
          showToast('Terjadi kesalahan saat mengupload rekaman.', 'error')
        } finally {
          this.uploading = false
        }
      },
    }
  }
</script>

<style>
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOutRight {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(100%);
      opacity: 0;
    }
  }
</style>
