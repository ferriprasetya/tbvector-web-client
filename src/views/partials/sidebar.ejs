<% if (isAuthenticated) { %>
<aside class="w-64 bg-white shadow-md border-r border-gray-200" x-data="{ openMenu: '' }">
  <nav class="mt-5 px-2 space-y-1">
    <!-- Dashboard -->
    <a href="/dashboard" 
       class="group flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentPath === '/dashboard' ? 'bg-indigo-100 text-indigo-900' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900' %>">
      <svg class="mr-3 h-5 w-5 <%= currentPath === '/dashboard' ? 'text-indigo-600' : 'text-gray-400 group-hover:text-gray-500' %>" 
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      Dashboard
    </a>

    <!-- Devices -->
    <a href="/devices" 
       class="group flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentPath.startsWith('/devices') ? 'bg-indigo-100 text-indigo-900' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900' %>">
      <svg class="mr-3 h-5 w-5 <%= currentPath.startsWith('/devices') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-gray-500' %>" 
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
      </svg>
      Perangkat
    </a>

    <!-- Coughs -->
    <a href="/coughs" 
       class="group flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentPath.startsWith('/coughs') ? 'bg-indigo-100 text-indigo-900' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900' %>">
      <svg class="mr-3 h-5 w-5 <%= currentPath.startsWith('/coughs') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-gray-500' %>" 
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
      </svg>
      Data Batuk
    </a>

    <!-- Notifications -->
    <a href="/notifications" 
       class="group flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentPath.startsWith('/notifications') ? 'bg-indigo-100 text-indigo-900' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900' %>">
      <svg class="mr-3 h-5 w-5 <%= currentPath.startsWith('/notifications') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-gray-500' %>" 
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
      Notifikasi
    </a>

    <% if (user.role === 'admin') { %>
    <hr class="my-4 border-gray-200">
    
    <!-- Admin Section -->
    <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">
      Admin
    </p>
    
    <!-- Users Management (Admin Only) -->
    <a href="/users" 
       class="group flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentPath.startsWith('/users') ? 'bg-indigo-100 text-indigo-900' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900' %>">
      <svg class="mr-3 h-5 w-5 <%= currentPath.startsWith('/users') ? 'text-indigo-600' : 'text-gray-400 group-hover:text-gray-500' %>" 
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      Manajemen User
    </a>
    <% } %>
  </nav>
</aside>
<% } %>
